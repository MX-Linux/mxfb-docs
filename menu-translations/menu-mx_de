#the default versions of the submenus are located in /usr/share/mxflux/menu

[begin] (Fluxbox)
		[submenu] (All Apps)
            [include] (~/.fluxbox/submenus/full_menu)
            [separator]
            [exec] (Update Menu)  {/usr/bin/mxfb-menu-generator}
   [end]
	[submenu] (Letztverwendete Dateien) 
			[include] (~/.fluxbox/submenus/recent_files_menu)
			[separator]
			[exec] (Liste aktualisieren) {~/.fluxbox/scripts/recentfiles-fbmenu}
		[end]
	[separator]
    [exec] (Browser) {sensible-browser}
    [exec] (Dateiverwaltung) {exo-open $HOME/.fluxbox} 
    [exec] (Hilfe) {mxfb-help}
    [exec] (Musik) {deadbeef}
    [exec] (Ausf√ºhren) {fbrun}
    [exec] (Settings manager) {custom-toolbox /etc/custom-toolbox/mxfb-settings.list} 
    [exec] (Terminal) {roxterm} 
    [separator]
    [submenu] (Erscheinungsbild)
    [include] (~/.fluxbox/submenus/appearance)
    [end]
    [submenu] ()
    [include] (~/.fluxbox/submenus/settings)
    [end]
    [submenu] ()
        [include] (~/.fluxbox/submenus/out-of-sight)
    [end]
    [submenu] (Verlassen)
        [exec] (Aktualisieren) { fluxbox-remote restart; idesktoggle idesk refresh }
        [exec] (Schlafmodus) {sudo 'pm-suspend'}
        [exit] (Abmelden) 
        [exec] (Neustart) {sudo /sbin/reboot} 
        [exec] (Ausschalten) {sudo /sbin/halt}
    [end]
[end]
