# the submenus can be found in /usr/share/mxflux/menu/

[begin] (Fluxbox)
	[submenu] (All Apps)
            [include] (~/.fluxbox/submenus/full_menu)
            [separator]
            [exec] (Update Menu)  {/usr/bin/mxfb-menu-generator}
   [end]
	[submenu] (Archivos recientes) 
			[include] (~/.fluxbox/submenus/recent_files_menu)
			[separator]
			[exec] (Actualizar lista) {~/.fluxbox/scripts/recentfiles-fbmenu}
		[end]
	[separator]
    [exec] (Examinar) {sensible-browser}
    [exec] (Correo electrónico) {xdg-email}
    [exec] (Gestor de archivos) {thunar $HOME/.fluxbox} 
    [exec] (Ayuda) {thunar /usr/share/mxflux/help}
    [exec] (Música) {clementine}
    [exec] (Ejecutar) {fbrun} 
    [exec] (Terminal) {xfce4-terminal} 
    [separator]
    [submenu] (Apariencia)
    [include] (~/.fluxbox/submenus/appearance)
    [end]
    [submenu] (Ajustes)
    [include] (~/.fluxbox/submenus/settings)
    [end]
    [submenu] (Cambiar la vista)
        [include] (~/.fluxbox/submenus/out-of-sight)
    [end]
    [submenu] (Salir)
        [exec] (Actualizar) { fluxbox-remote restart; idesktoggle idesk refresh }
        [exec] (Suspender) {sudo 'pm-suspend'}
        [exit] (Cerrar sesión) 
        [exec] (Reiniciar) {sudo /sbin/reboot} 
        [exec] (Apagar) {sudo /sbin/halt}
    [end]
[end]
