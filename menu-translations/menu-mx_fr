# the submenus can be found in /usr/share/mxflux/menu/

[begin] (Fluxbox)
	[submenu] (All Apps)
            [include] (~/.fluxbox/submenus/full_menu)
            [separator]
            [exec] (Update Menu)  {/usr/bin/mxfb-menu-generator}
   [end]
	[submenu] (Fichiers récents) 
			[include] (~/.fluxbox/submenus/recent_files_menu)
			[separator]
			[exec] (Liste des mises à jour) {~/.fluxbox/scripts/recentfiles-fbmenu}
		[end]
	[separator]
    [exec] (Navigateur) {sensible-browser}
    [exec] (Courriel) {xdg-email}
    [exec] (Gestionnaire de fichiers) {thunar $HOME/.fluxbox} 
    [exec] (Aide) {thunar /usr/share/mxflux/help}
    [exec] (Musique) {clementine}
    [exec] (Exécuter) {fbrun} 
    [exec] (Terminal) {xfce4-terminal} 
    [separator]
    [submenu] (Apparence)
    [include] (~/.fluxbox/submenus/appearance)
    [end]
    [submenu] (Paramètres)
    [include] (~/.fluxbox/submenus/settings)
    [end]
    [submenu] (Masquer)
        [include] (~/.fluxbox/submenus/out-of-sight)
    [end]
    [submenu] (Quitter)
        [exec] (Rafraichir) { fluxbox-remote restart; idesktoggle idesk refresh }
        [exec] (Suspendre) {sudo 'pm-suspend'}
        [exit] (Déconnexion) 
        [exec] (Redémarrer) {sudo /sbin/reboot} 
        [exec] (Arrêter) {sudo /sbin/halt}
    [end]
[end]
