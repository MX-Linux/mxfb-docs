		[submenu] (All Apps)
            [include] (~/.fluxbox/submenus/full_menu)
            [separator]
            [exec] (Update Menu)  {/usr/bin/mxfb-menu-generator}
   [end]
	[submenu] () 
			[include] (~/.fluxbox/submenus/recent_files_menu)
			[separator]
			[exec] () {~/.fluxbox/scripts/recentfiles-fbmenu}
		[end]
	[separator]
    [exec] () {sensible-browser}
    [exec] (עזרה) {exo-open $HOME/.fluxbox} 
    [exec] () {mxfb-help}
    [exec] () {deadbeef}
    [exec] () {fbrun}
    [exec] (Settings manager) {custom-toolbox /etc/custom-toolbox/mxfb-settings.list} 
    [exec] () {roxterm} 
    [separator]
    [submenu] ()
    [include] (~/.fluxbox/submenus/appearance_he)
    [end]
    [submenu] ()
    [include] (~/.fluxbox/submenus/settings_he)
    [end]
    [submenu] ()
        [include] (~/.fluxbox/submenus/out-of-sight_he)
    [end]
    [submenu] (ריענון)
        [exec] () { fluxbox-remote restart; idesktoggle idesk refresh }
        [exec] () {sudo 'pm-suspend'}
        [exit] () 
        [exec] () {sudo /sbin/reboot} 
        [exec] () {sudo /sbin/halt}
    [end]
[end]
