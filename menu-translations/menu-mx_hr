# the submenus can be found in /usr/share/mxflux/menu/

[begin] (Fluxbox)
	[submenu] (All Apps)
            [include] (~/.fluxbox/submenus/full_menu)
            [separator]
            [exec] (Update Menu)  {/usr/bin/mxfb-menu-generator}
   [end]
	[submenu] (Nedavne datoteke) 
			[include] (~/.fluxbox/submenus/recent_files_menu)
			[separator]
			[exec] () {~/.fluxbox/scripts/recentfiles-fbmenu}
		[end]
	[separator]
    [exec] (Preglednik) {sensible-browser}
    [exec] (Email) {xdg-email}
    [exec] (Upravitelj datotekama) {thunar $HOME/.fluxbox} 
    [exec] (Pomoć) {thunar /usr/share/mxflux/help}
    [exec] (Glazba) {clementine}
    [exec] () {fbrun} 
    [exec] (Terminal) {xfce4-terminal} 
    [separator]
    [submenu] (Izgled)
    [include] (~/.fluxbox/submenus/appearance)
    [end]
    [submenu] (Postavke)
    [include] (~/.fluxbox/submenus/settings)
    [end]
    [submenu] ()
        [include] (~/.fluxbox/submenus/out-of-sight)
    [end]
    [submenu] (Napusti)
        [exec] (Osvježi) { fluxbox-remote restart; idesktoggle idesk refresh }
        [exec] () {sudo 'pm-suspend'}
        [exit] (Odjava) 
        [exec] () {sudo /sbin/reboot} 
        [exec] (Isključi) {sudo /sbin/halt}
    [end]
[end]
