#the default versions of the submenus are located in /usr/share/mxflux/menu

[begin] (MX Fluxbox)
		[submenu] (All Apps)
            [include] (~/.fluxbox/submenus/full_menu)
            [separator]
            [exec] (Update)  {/usr/bin/mxfb-menu-generator}
   [end]
	[submenu] () 
			[include] (~/.fluxbox/submenus/recent_files_menu)
			[separator]
			[exec] (Update) {~/.fluxbox/scripts/recentfiles-fbmenu}
		[end]
	[separator]
    [exec] (Peramban) {sensible-browser}
    [exec] (Pengelola Berkas) {exo-open $HOME/.fluxbox} 
    [submenu] ()
    	[exec] () {weather_cli}
    	[submenu] ()
    	   	[Exec] () {mxfb-borders}
    		[Exec] () {mxfb-top}
        [end]
        [exec] (Xkcd) {bl-xkcd}
    [end]
    [exec] (Bantuan) {mxfb-help}
    [exec] (Musik) {deadbeef}
    [exec] (Jalankan) {mxfb-rofirun}
    [exec] (Settings manager) {custom-toolbox /etc/custom-toolbox/mxfb-settings.list} 
    [exec] (Terminal) {roxterm} 
    [separator]
    [submenu] (Tampilan)
    [include] (/usr/share/mxflux/menu-translations/appearance_id)
    [end]
    [submenu] (Setelan)
    [include] (/usr/share/mxflux/menu-translations/settings_id)
    [end]
    [submenu] ()
        [include] (/usr/share/mxflux/menu-translations/out-of-sight_id)
    [end]
    [submenu] ()
        [exec] () { fluxbox-remote reloadstyle; fluxbox-remote reconfigure; idesktoggle idesk refresh }
        [exec] () {sudo 'pm-suspend'}
        [exit] () 
        [exec] () {sudo /sbin/reboot} 
        [exec] () {sudo /sbin/halt}
    [end]
[end]
