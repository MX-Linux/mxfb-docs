# the submenus can be found in /usr/share/mxflux/menu/

[begin] (Fluxbox)
	[submenu] (All Apps)
            [include] (~/.fluxbox/submenus/full_menu)
            [separator]
            [exec] (Update Menu)  {/usr/bin/mxfb-menu-generator}
   [end]
	[submenu] (File recenti) 
			[include] (~/.fluxbox/submenus/recent_files_menu)
			[separator]
			[exec] (Elenco aggiornamenti) {~/.fluxbox/scripts/recentfiles-fbmenu}
		[end]
	[separator]
    [exec] (Browser) {sensible-browser}
    [exec] (E-mail) {xdg-email}
    [exec] (Gestore dei file) {thunar $HOME/.fluxbox} 
    [exec] (Aiuto) {thunar /usr/share/mxflux/help}
    [exec] (Musica) {clementine}
    [exec] (Esegui) {fbrun} 
    [exec] (Terminale) {xfce4-terminal} 
    [separator]
    [submenu] (Aspetto)
    [include] (~/.fluxbox/submenus/appearance)
    [end]
    [submenu] (Impostazioni)
    [include] (~/.fluxbox/submenus/settings)
    [end]
    [submenu] (Fuori dalla vista)
        [include] (~/.fluxbox/submenus/out-of-sight)
    [end]
    [submenu] (Abbandona)
        [exec] (Ricarica) { fluxbox-remote restart; idesktoggle idesk refresh }
        [exec] (Sospendi) {sudo 'pm-suspend'}
        [exit] (Logout) 
        [exec] (Riavvia) {sudo /sbin/reboot} 
        [exec] (Spegni) {sudo /sbin/halt}
    [end]
[end]
