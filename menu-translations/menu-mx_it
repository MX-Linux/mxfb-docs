#the default versions of the submenus are located in /usr/share/mxflux/menu

[begin] (Fluxbox)
	[exec] (Tutte le app.) {rofi -show drun}
	[submenu] (File recenti) 
			[include] (~/.fluxbox/submenus/recent_files_menu)
			[separator]
			[exec] (Elenco aggiornamenti) {~/.fluxbox/scripts/recentfiles-fbmenu}
		[end]
	[separator]
    [exec] (Browser) {sensible-browser}
    [exec] (Gestore dei file) {thunar} 
    [exec] (Aiuto) {thunar /usr/share/mxflux/help/}
    [exec] (Musica) {deadbeef}
    [exec] (Esegui...) {fbrun}
    [exec] (Gestore delle impostazioni) {custom-toolbox /etc/custom-toolbox/mxfb-settings.list} 
    [exec] (Terminale) {xfce4-terminal} 
        [separator]
    [submenu] (Aspetto)
    [include] (/usr/share/mxflux/menu/menu-translations/appearance_it)
    [end]
    [submenu] (Impostazioni)
    [include] (/usr/share/mxflux/menu/menu-translations/settings_it)
    [end]
    [submenu] (Fuori dal campo visivo)
        [include] (/usr/share/mxflux/menu/menu-translations/out-of-sight_it)
    [end]
    [submenu] (Abbandona)
        [exec] (Aggiorna) { fluxbox-remote restart; idesktoggle idesk refresh }
        [exec] (Sospendi) {sudo 'pm-suspend'}
        [exit] (Esci) 
        [exec] (Arresta) {sudo /sbin/halt}
    [end]
[end]
