[begin] (Fluxbox) 
    [exec] (About) {about-mx-fluxbox}
    [exec] (すべてのアプリ) {rofi -show drun}
    [exec] (ブラウザ) {firefox}
    [exec] (電子メール) {thunderbird}
    [exec] (ファイルマネージャ) {thunar $HOME/.fluxbox} 
    [exec] (ヘルプ) {thunar /usr/share/mxflux/help}
    [exec] (音楽) {clementine}
    [exec] (実行) {fbrun} 
    [exec] (端末) {xfce4-terminal} 
    [separator]
    [submenu] (外観) 
        [exec] (コンキー){conky-manager2}
        [submenu] (ドック)
            [exec] (既定) {~/.fluxbox/scripts/DefaultDock.mxdk}
            [separator]
            [exec] (ドックメーカー) {mx-dockmaker}
        [end]
        [exec] (デスクトップアイコン) {mx-idesktool}
        [exec] (モニタ) {gkrellm}
        [submenu] (スタイル)
            [stylesdir] (~/.fluxbox/styles)
            [separator]
            [stylesdir] (/usr/share/fluxbox/styles) 
        [end]
        [exec] (テーマ) {lxappearance}
        [submenu] (ツールバー)
            [exec] (Fluxbox) {toggletint2}
            [exec] (トラディショナル) {toggletint2}
        [end]
        [submenu] (壁紙)
            [wallpapers] (~/.fluxbox/backgrounds) {feh --bg-scale}
            [separator]
            [wallpapers] (/usr/share/backgrounds) {feh --bg-scale}
        [end]
    [end]
    [submenu] (設定)
        [submenu] (設定)
            [exec] (アプリ) {xdg-open ~/.fluxbox/apps}
            [exec] (初期化) {xdg-open ~/.fluxbox/init}
            [exec] (キー) {xdg-open ~/.fluxbox/keys}
            [exec] (Menu) {xdg-open ~/.fluxbox/menu-mx}
            [exec] (重ねて表示) {xdg-open ~/.fluxbox/overlay}
            [exec] (起動) {featherpad ~/.fluxbox/startup}
            [exec] (スタイル) {thunar ~/.fluxbox/styles/}
        [end]
        [submenu] (キーボード)
            [exec] (DE) {setxkbmap de}
			      [exec] (ES) {setxkbmap es} 
			      [exec] (FR) {setxkbmap fr}
			      [exec] (GB) {setxkbmap gb}
			      [exec] (GR) {setxkbmap gr}
			      [exec] (JA) {setxkbmap ja}
			      [exec] (IT) {setxkbmap it}
			      [exec] (PL) {setxkbmap pl}
			      [exec] (PT) {setxkbmap pt}
			      [exec] (RU) {setxkbmap ru}
			      [exec] (US) {setxkbmap us}
        [end]
        [config] (Fluxbox)
        [exec] (Xfce) {xfce4-settings-manager}
    [end] 
    [separator]
    [submenu] (視界から消去)
            [exec] (ドックの停止) { killall wmalauncher               }
    [exec] (ウィンドウの終了) { xkill                             }
    [separator]
    [exec] (コンキーの切り換え) { conkytoggle.sh                    }
    [exec] (iDesk の切り換え) { idesktoggle idesk                 }
    [exec] (アイコンの切り換え) { idesktoggle icons                 }
    [exec] (ドックを自動的に隠す機能の切り換え) { $HOME/.fluxbox/scripts/toggledock }
    [exec] (ツールバーを自動的に隠す機能の切り換え) {$HOME/.fluxbox/scripts/toggletoolbar}
    [exec] (モニタの切り換え) { toggle-mx gkrellm                 }
    [separator]
    [exec] (標準ドックの無効化) { killall wmalauncher && $HOME/.fluxbox/scripts/dfltdck_kill }
    [end]
    [submenu] (終了)
        [exec] (リフレッシュ) { fluxbox-remote restart; idesktoggle idesk refresh }
        [exec] (サスペンド) {sudo 'pm-suspend'}
        [exit] (ログアウト) 
        [exec] (再起動) {sudo /sbin/reboot} 
        [exec] (シャットダウン) {sudo /sbin/halt}
    [end]
[end]
