# the submenus can be found in /usr/share/mxflux/menu/

[begin] (Fluxbox)
	[submenu] (All Apps)
            [include] (~/.fluxbox/submenus/full_menu)
            [separator]
            [exec] (Update Menu)  {/usr/bin/mxfb-menu-generator}
   [end]
	[submenu] (最近開いたファイル) 
			[include] (~/.fluxbox/submenus/recent_files_menu)
			[separator]
			[exec] (一覧の更新) {~/.fluxbox/scripts/recentfiles-fbmenu}
		[end]
	[separator]
    [exec] (ブラウザ) {sensible-browser}
    [exec] (電子メール) {xdg-email}
    [exec] (ファイルマネージャ) {thunar $HOME/.fluxbox} 
    [exec] (ヘルプ) {thunar /usr/share/mxflux/help}
    [exec] (音楽) {clementine}
    [exec] (実行) {fbrun} 
    [exec] (端末) {xfce4-terminal} 
    [separator]
    [submenu] (外観)
    [include] (~/.fluxbox/submenus/appearance)
    [end]
    [submenu] (設定)
    [include] (~/.fluxbox/submenus/settings)
    [end]
    [submenu] (視界から消去)
        [include] (~/.fluxbox/submenus/out-of-sight)
    [end]
    [submenu] (終了)
        [exec] (リフレッシュ) { fluxbox-remote restart; idesktoggle idesk refresh }
        [exec] (サスペンド) {sudo 'pm-suspend'}
        [exit] (ログアウト) 
        [exec] (再起動) {sudo /sbin/reboot} 
        [exec] (シャットダウン) {sudo /sbin/halt}
    [end]
[end]
