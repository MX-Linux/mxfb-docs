[begin] (Fluxbox) 
    [exec] (About) {about-mx-fluxbox}
    [exec] (Alle apps) {rofi -show drun}
    [exec] ("Browser") {firefox}
    [exec] ("Email") {thunderbird}
    [exec] (Bestandsbeheerder) {thunar $HOME/.fluxbox} 
    [exec] ("Help") {thunar /usr/share/mxflux/help}
    [exec] (Muziek) {clementine}
    [exec] (Uitvoeren) {fbrun} 
    [exec] ("Terminal") {xfce4-terminal} 
    [separator]
    [submenu] (Uiterlijk) 
        [exec] ("Conky"){conky-manager2}
        [submenu] ("Docks")
            [exec] (Standaard) {~/.fluxbox/scripts/DefaultDock.mxdk}
            [separator]
            [exec] ("Dockmaker") {mx-dockmaker}
        [end]
        [exec] (Desktop iconen) {mx-idesktool}
        [exec] (Beeldschermen) {gkrellm}
        [submenu] (Stijl)
            [stylesdir] (~/.fluxbox/styles)
            [separator]
            [stylesdir] (/usr/share/fluxbox/styles) 
        [end]
        [exec] (Thema) {lxappearance}
        [submenu] (Gereedschapsbalk)
            [exec] (Fluxbox) {toggletint2}
            [exec] ("Traditioneel") {toggletint2}
        [end]
        [submenu] (Desktopachtergrond)
            [wallpapers] (~/.fluxbox/backgrounds) {feh --bg-scale}
            [separator]
            [wallpapers] (/usr/share/backgrounds) {feh --bg-scale}
        [end]
    [end]
    [submenu] (Instellingen)
        [submenu] (Configureer)
            [exec] ("Apps") {xdg-open ~/.fluxbox/apps}
            [exec] ("Init") {xdg-open ~/.fluxbox/init}
            [exec] (Toetsen) {xdg-open ~/.fluxbox/keys}
            [exec] (Menu) {xdg-open ~/.fluxbox/menu-mx}
            [exec] (Overlapping) {xdg-open ~/.fluxbox/overlay}
            [exec] (Opstarten) {featherpad ~/.fluxbox/startup}
            [exec] (Stijlen) {thunar ~/.fluxbox/styles/}
        [end]
        [submenu] (Toetsenbord)
            [exec] (DE) {setxkbmap de}
			      [exec] (ES) {setxkbmap es} 
			      [exec] (FR) {setxkbmap fr}
			      [exec] (GB) {setxkbmap gb}
			      [exec] (GR) {setxkbmap gr}
			      [exec] (JA) {setxkbmap ja}
			      [exec] (IT) {setxkbmap it}
			      [exec] (PL) {setxkbmap pl}
			      [exec] (PT) {setxkbmap pt}
			      [exec] (RU) {setxkbmap ru}
			      [exec] (US) {setxkbmap us}
        [end]
        [config] (Fluxbox)
        [exec] (Xfce) {xfce4-settings-manager}
    [end] 
    [separator]
    [submenu] (Uit het zicht)
            [exec] (Beëindig dock) { killall wmalauncher               }
    [exec] (Beëindig venster) { xkill                             }
    [separator]
    [exec] (Wissel conky) { conkytoggle.sh                    }
    [exec] (Wissel iDesk) { idesktoggle idesk                 }
    [exec] (Wissel iconen) { idesktoggle icons                 }
    [exec] (Wissel automatisch dock verbergen) { $HOME/.fluxbox/scripts/toggledock }
    [exec] (Wissel automatisch gereedschapsbalk verbergen) {$HOME/.fluxbox/scripts/toggletoolbar}
    [exec] (Wissel beeldschermen) { toggle-mx gkrellm                 }
    [separator]
    [exec] (Standaard dock uitschakelen) { killall wmalauncher && $HOME/.fluxbox/scripts/dfltdck_kill }
    [end]
    [submenu] (Verlaten)
        [exec] (Verversen) { fluxbox-remote restart; idesktoggle idesk refresh }
        [exec] (Opschorten) {sudo 'pm-suspend'}
        [exit] (Afmelden) 
        [exec] (Herstarten) {sudo /sbin/reboot} 
        [exec] (Afsluiten) {sudo /sbin/halt}
    [end]
[end]
