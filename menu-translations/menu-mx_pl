#the default versions of the submenus are located in /usr/share/mxflux/menu

[begin] (Fluxbox)
	[exec] (Wszystkie aplikacje) {rofi -show drun}
	[submenu] (Ostatnie pliki) 
			[include] (~/.fluxbox/submenus/recent_files_menu)
			[separator]
			[exec] (Aktualizuj listę) {~/.fluxbox/scripts/recentfiles-fbmenu}
		[end]
	[separator]
    [exec] (Przeglądarka) {sensible-browser}
    [exec] (Menedżer plików) {thunar} 
    [exec] (Pomoc) {thunar /usr/share/mxflux/help/}
    [exec] (Muzyka) {deadbeef}
    [exec] (Uruchom) {fbrun}
    [exec] (Menedżer ustawień) {custom-toolbox /etc/custom-toolbox/mxfb-settings.list} 
    [exec] (Terminal) {xfce4-terminal} 
        [separator]
    [submenu] (Wygląd)
    [include] (/usr/share/mxflux/menu/menu-translations/appearance_pl)
    [end]
    [submenu] (Ustawienia)
    [include] (/usr/share/mxflux/menu/menu-translations/settings_pl)
    [end]
    [submenu] (Poza polem widzenia)
        [include] (/usr/share/mxflux/menu/menu-translations/out-of-sight_pl)
    [end]
    [submenu] (Wyjdź)
        [exec] (Odśwież) { fluxbox-remote restart; idesktoggle idesk refresh }
        [exec] (Wstrzymaj) {sudo 'pm-suspend'}
        [exit] (Wylogowanie) 
        [exec] (Wyłącz) {sudo /sbin/halt}
    [end]
[end]
