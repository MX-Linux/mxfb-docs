[begin] (Fluxbox) 
    [exec] (About) {about-mx-fluxbox}
    [exec] (Todos os Aplicativos) {rofi -show drun}
    [exec] (Navegador de Internet) {firefox}
    [exec] (E-mail) {thunderbird}
    [exec] (Gerenciador de Arquivos) {thunar $HOME/.fluxbox} 
    [exec] (Ajuda) {thunar /usr/share/mxflux/help}
    [exec] (Áudio) {clementine}
    [exec] (Executar) {fbrun} 
    [exec] (Terminal) {xfce4-terminal} 
    [separator]
    [submenu] (Aparência) 
        [exec] (Conky){conky-manager2}
        [submenu] (Docas)
            [exec] (Padrão) {~/.fluxbox/scripts/DefaultDock.mxdk}
            [separator]
            [exec] (Criador de Doca) {mx-dockmaker}
        [end]
        [exec] (Ícones da Área de Trabalho) {mx-idesktool}
        [exec] (Monitores) {gkrellm}
        [submenu] (Estilo)
            [stylesdir] (~/.fluxbox/styles)
            [separator]
            [stylesdir] (/usr/share/fluxbox/styles) 
        [end]
        [exec] (Tema) {lxappearance}
        [submenu] (Barra de Ferramentas)
            [exec] (Fluxbox) {toggletint2}
            [exec] (Tradicional) {toggletint2}
        [end]
        [submenu] (Papel de Parede)
            [wallpapers] (~/.fluxbox/backgrounds) {feh --bg-scale}
            [separator]
            [wallpapers] (/usr/share/backgrounds) {feh --bg-scale}
        [end]
    [end]
    [submenu] (Configurações)
        [submenu] (Configurar)
            [exec] (Aplicativos) {xdg-open ~/.fluxbox/apps}
            [exec] (Iniciar) {xdg-open ~/.fluxbox/init}
            [exec] (Teclas) {xdg-open ~/.fluxbox/keys}
            [exec] (Menu) {xdg-open ~/.fluxbox/menu-mx}
            [exec] (Sobreposição) {xdg-open ~/.fluxbox/overlay}
            [exec] (Iniciar) {featherpad ~/.fluxbox/startup}
            [exec] (Estilo) {thunar ~/.fluxbox/styles/}
        [end]
        [submenu] (Teclado)
            [exec] (DE) {setxkbmap de}
			      [exec] (ES) {setxkbmap es} 
			      [exec] (FR) {setxkbmap fr}
			      [exec] (GB) {setxkbmap gb}
			      [exec] (GR) {setxkbmap gr}
			      [exec] (JA) {setxkbmap ja}
			      [exec] (IT) {setxkbmap it}
			      [exec] (PL) {setxkbmap pl}
			      [exec] (PT) {setxkbmap pt}
			      [exec] (RU) {setxkbmap ru}
			      [exec] (US) {setxkbmap us}
        [end]
        [config] (Fluxbox)
        [exec] (Xfce) {xfce4-settings-manager}
    [end] 
    [separator]
    [submenu] (Ocultar)
            [exec] (Aniquilar a Doca) { killall wmalauncher               }
    [exec] (Aniquilar a Janela) { xkill                             }
    [separator]
    [exec] (Ligar/Desligar o Conky) { conkytoggle.sh                    }
    [exec] (Ligar/Desligar o iDesk) { idesktoggle idesk                 }
    [exec] (Ligar/Desligar os Ícones) { idesktoggle icons                 }
    [exec] (Exibir/Ocultar a Doca) { $HOME/.fluxbox/scripts/toggledock }
    [exec] (Exibir/Ocultar a Barra de Ferramentas) {$HOME/.fluxbox/scripts/toggletoolbar}
    [exec] (Ligar/Desligar os Monitores) { toggle-mx gkrellm                 }
    [separator]
    [exec] (Desativar a Doca Padrão) { killall wmalauncher && $HOME/.fluxbox/scripts/dfltdck_kill }
    [end]
    [submenu] (Sair)
        [exec] (Recarregar) { fluxbox-remote restart; idesktoggle idesk refresh }
        [exec] (Suspender) {sudo 'pm-suspend'}
        [exit] (Sair da Sessão) 
        [exec] (Reiniciar) {sudo /sbin/reboot} 
        [exec] (Desligar) {sudo /sbin/halt}
    [end]
[end]
