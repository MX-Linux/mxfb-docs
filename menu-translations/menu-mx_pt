# the submenus can be found in /usr/share/mxflux/menu/

[begin] (Fluxbox)
	[submenu] (All Apps)
            [include] (~/.fluxbox/submenus/full_menu)
            [separator]
            [exec] (Update Menu)  {/usr/bin/mxfb-menu-generator}
   [end]
	[submenu] (Arquivos Recentes) 
			[include] (~/.fluxbox/submenus/recent_files_menu)
			[separator]
			[exec] (Atualizar a Lista) {~/.fluxbox/scripts/recentfiles-fbmenu}
		[end]
	[separator]
    [exec] (Navegador de Internet) {sensible-browser}
    [exec] (E-mail) {xdg-email}
    [exec] (Gerenciador de Arquivos) {thunar $HOME/.fluxbox} 
    [exec] (Ajuda) {thunar /usr/share/mxflux/help}
    [exec] (Áudio) {clementine}
    [exec] (Executar) {fbrun} 
    [exec] (Terminal) {xfce4-terminal} 
    [separator]
    [submenu] (Aparência)
    [include] (~/.fluxbox/submenus/appearance)
    [end]
    [submenu] (Configurações)
    [include] (~/.fluxbox/submenus/settings)
    [end]
    [submenu] (Ocultar)
        [include] (~/.fluxbox/submenus/out-of-sight)
    [end]
    [submenu] (Sair)
        [exec] (Recarregar) { fluxbox-remote restart; idesktoggle idesk refresh }
        [exec] (Suspender) {sudo 'pm-suspend'}
        [exit] (Sair da Sessão) 
        [exec] (Reiniciar) {sudo /sbin/reboot} 
        [exec] (Desligar) {sudo /sbin/halt}
    [end]
[end]
