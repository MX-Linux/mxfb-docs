#the default versions of the submenus are located in /usr/share/mxflux/menu

[begin] ()
		[submenu] (All Apps)
            [include] (~/.fluxbox/submenus/full_menu)
            [separator]
            [exec] (Update)  {/usr/bin/mxfb-menu-generator}
   [end]
	[submenu] (最近文件) 
			[include] (~/.fluxbox/submenus/recent_files_menu)
			[separator]
			[exec] (Update) {~/.fluxbox/scripts/recentfiles-fbmenu}
		[end]
	[separator]
    [exec] (浏览器) {sensible-browser}
    [exec] () {exo-open $HOME/.fluxbox} 
    [submenu] ()
    	[exec] () {weather_cli}
    	[submenu] ()
    	   	[Exec] () {mxfb-borders}
    		[Exec] () {mxfb-top}
        [end]
        [exec] (Xkcd) {bl-xkcd}
    [end]
    [exec] (帮助) {mxfb-help}
    [exec] (音乐) {deadbeef}
    [exec] (运行) {mxfb-rofirun}
    [exec] () {custom-toolbox /etc/custom-toolbox/mxfb-settings.list} 
    [exec] (终端) {roxterm} 
    [separator]
    [submenu] (外观)
    [include] (/usr/share/mxflux/menu-translations/appearance_zh)
    [end]
    [submenu] (设置)
    [include] (/usr/share/mxflux/menu-translations/settings_zh)
    [end]
    [submenu] ()
        [include] (/usr/share/mxflux/menu-translations/out-of-sight_zh)
    [end]
    [submenu] (离开)
        [exec] () { fluxbox-remote reloadstyle; fluxbox-remote reconfigure; idesktoggle idesk refresh }
        [exec] (挂起) {sudo 'pm-suspend'}
        [exit] (注销) 
        [exec] (重启) {sudo /sbin/reboot} 
        [exec] (关机) {sudo /sbin/halt}
    [end]
[end]
