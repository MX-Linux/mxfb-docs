#the default versions of the submenus are located in /usr/share/mxflux/menu

[begin] (Fluxbox)
		[submenu] (All Apps)
            [include] (~/.fluxbox/submenus/full_menu)
            [separator]
            [exec] (Update Menu)  {/usr/bin/mxfb-menu-generator}
   [end]
	[submenu] (最近文件) 
			[include] (~/.fluxbox/submenus/recent_files_menu)
			[separator]
			[exec] (更新列表) {~/.fluxbox/scripts/recentfiles-fbmenu}
		[end]
	[separator]
    [exec] (浏览器) {sensible-browser}
    [exec] (文件管理器) {exo-open $HOME/.fluxbox} 
    [exec] (帮助) {exo-open /usr/share/mxflux/help}
    [exec] (音乐) {deadbeef}
    [exec] (运行) {fbrun} 
    [exec] (终端) {roxterm} 
    [separator]
    [submenu] (外观)
    [include] (~/.fluxbox/submenus/appearance)
    [end]
    [submenu] (设置)
    [include] (~/.fluxbox/submenus/settings)
    [end]
    [submenu] (视界外)
        [include] (~/.fluxbox/submenus/out-of-sight)
    [end]
    [submenu] (离开)
        [exec] (刷新) { fluxbox-remote restart; idesktoggle idesk refresh }
        [exec] (挂起) {sudo 'pm-suspend'}
        [exit] (注销) 
        [exec] (重启) {sudo /sbin/reboot} 
        [exec] (关机) {sudo /sbin/halt}
    [end]
[end]
