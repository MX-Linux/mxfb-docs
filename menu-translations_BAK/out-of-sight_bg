[begin] () 
    [exec] (Док за убиване) { killall wmalauncher               }
    [exec] (Избиване на прозорец) { xkill                             }
    [separator]
    [exec] (Превключване на conky) { conkytoggle.sh                    }
    [exec] (Превключване на iDesk) { idesktoggle idesk                 }
    [exec] (Превключване на икони) { idesktoggle icons                 }
    [exec] (Превключване на автоматично скриване на док) { $HOME/.fluxbox/scripts/toggledock }
    [exec] (Превключване на автоматичното скриване на лентата с инструменти) {$HOME/.fluxbox/scripts/toggletoolbar}
     [exec] (Превключване на автоматично скриване на панела) {$HOME/.fluxbox/scripts/toggletint2}
    [exec] (Превключване на мониторите) { toggle-mx gkrellm                 }
    [separator]
    [exec] (Деактивиране на док по подразбиране) { killall wmalauncher && $HOME/.fluxbox/scripts/dfltdck_kill }
[end]
