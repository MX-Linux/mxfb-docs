[begin] (視界の外) 
    [exec] (ドックの停止) { killall wmalauncher               }
    [exec] (ウィンドウの終了) { xkill                             }
    [separator]
    [exec] (コンキーの切り換え) { conkytoggle.sh                    }
    [exec] (iDesk の切り換え) { idesktoggle idesk                 }
    [exec] (アイコンの切り換え) { idesktoggle icons                 }
    [exec] (ドックを自動的に隠す機能の切り換え) { $HOME/.fluxbox/scripts/toggledock }
    [exec] (ツールバーを自動的に隠す機能の切り換え) {$HOME/.fluxbox/scripts/toggletoolbar}
     [exec] (パネルを自動的に隠す機能の切り換え) {$HOME/.fluxbox/scripts/toggletint2}
    [exec] (モニタの切り替え) { toggle-mx gkrellm                 }
    [separator]
    [exec] (既定ドックの無効化) { killall wmalauncher && $HOME/.fluxbox/scripts/dfltdck_kill }
[end]
